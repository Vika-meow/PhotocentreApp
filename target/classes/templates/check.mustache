<html>

<body>
<a href="/insert">Back</a>
<div></div>
<div>
    <form method="post" action="/insert/check">
        <select name ="address" placeholder="Адрес">
            <option value="-1">Адрес доставки</option>
            {{#organization}}
                <option value="{{address}}">{{address}}</option>
            {{/organization}}
        </select>
        <input type="text" name="customerName" placeholder="Покупатель"/>
        <input type="date" name="date" placeholder="Дата поставки"/>
        <button type="submit">Добавить</button>
    </form>
</div>
<div>Check List</div>

{{#check}}
    <form method="post" action="/insert/check/Input">
        <div>
            <input type ="hidden" name="deliveryId" value="{{checkId}}">
            <b>{{checkId}}</b>
            <span>{{organizationName}}</span>
            <span>{{customerName}}</span>
            <span>{{date}}</span>
            <button type="submit">Добавить товары в чек</button>
        </div>
    </form>
{{/check}}

</body>
</html>