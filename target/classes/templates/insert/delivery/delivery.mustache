<html>
<head>
    <link rel="stylesheet" type="text/css" href="../../../static/tableStyle.css">
    <title>Photocentre</title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
</head>
<body>
<a href="/insert">Back</a>
<div></div>
<div>
    <form method="post" action="/insert/delivery">
        <select name ="address" placeholder="Адрес" required>
            <option value="" selected disabled>Адрес доставки</option>
            {{#organization}}
                <option value="{{address}}">{{address}}</option>
            {{/organization}}
        </select>
        <select name ="supplierId" placeholder="Поставщик" required>
            <option value="" disabled selected>Поставщик</option>
            {{#supplier}}
                <option value="{{supplierId}}">{{organization}}</option>
            {{/supplier}}
        </select>
        <input type="date" name="date" placeholder="Дата поставки" required/>
        <button type="submit">Добавить</button>
    </form>
</div>
<div>Delivery List</div>
<script src="https://code.jquery.com/jquery-2.2.4.min.js" integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44=" crossorigin="anonymous"></script>
<script type="text/javascript" src="/static/insert/delivery/deleteDelivery.js"></script>
<table id="deliveryTable">
    <tr>
        <th>Delivery Id</th>
        <th>Имя организации</th>
        <th>Поставщик</th>
        <th>Дата</th>
        <th>Добавить элементы поставки</th>
        <th>Удалить</th>
    </tr>
    {{#delivery}}
            <tr>
                <form method="get" action="/insert/delivery/input">
                <input type ="hidden" name="deliveryId" value="{{deliveryId}}">
                <td>{{deliveryId}}</td>
                <td>{{organizationName}}</td>
                <td>{{supplierName}}</td>
                <td>{{date}}</td>
                <td><button type="submit">Добавить элементы поставки</button></td>
                </form>
                <td><button type="submit" id="deleteDelivery" value={{deliveryId}}>Удалить поставку</button></td>
            </tr>
    {{/delivery}}
</table>
</body>
</html>