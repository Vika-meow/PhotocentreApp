<html>
<head><link rel="stylesheet" type="text/css" href="../../../static/tableStyle.css"></head>
<body>
<a href="/insert">Back</a>
<div></div>
<div>
    <form method="post" action="/insert/delivery">
        <select name ="address" placeholder="Адрес">
            <option value="-1">Адрес доставки</option>
            {{#organization}}
                <option value="{{address}}">{{address}}</option>
            {{/organization}}
        </select>
        <select name ="supplierId" placeholder="Поставщик">
            <option value="-1">Поставщик</option>
            {{#supplier}}
                <option value="{{supplierId}}">{{organization}}</option>
            {{/supplier}}
        </select>
        <input type="date" name="date" placeholder="Дата поставки"/>
        <button type="submit">Добавить</button>
    </form>
</div>
<div>Delivery List</div>
<table>
    <tr>
        <th>Delivery Id</th>
        <th>Имя организации</th>
        <th>Поставщик</th>
        <th>Дата</th>
        <th>Добавить элементы поставки</th>
    </tr>
    {{#delivery}}
        <form method="get" action="/insert/delivery/input">
            <tr>
                <input type ="hidden" name="deliveryId" value="{{deliveryId}}">
                <td>{{deliveryId}}</td>
                <td>{{organizationName}}</td>
                <td>{{supplierName}}</td>
                <td>{{date}}</td>
                <td><button type="submit">Добавить элементы поставки</button></td>
            </tr>
        </form>
    {{/delivery}}
</table>
</body>
</html>